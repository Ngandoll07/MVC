@using WebRuou.Models
@using PagedList.Mvc;
@model PagedList.PagedList<Review>

@{
    ViewBag.Title = "Danh sách đánh giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .pagination {
        display: flex;
        justify-content: center;
        list-style: none;
        padding: 0;
        margin-top: 20px;
    }

        .pagination li {
            margin: 0 5px;
        }

            .pagination li a,
            .pagination li span {
                padding: 8px 12px;
                text-decoration: none;
                color: #007bff;
                border: 1px solid #ddd;
                border-radius: 4px;
                transition: background-color 0.3s ease;
            }

                .pagination li a:hover,
                .pagination li span:hover {
                    background-color: #007bff;
                    color: white;
                }

            .pagination li.active span {
                background-color: #007bff;
                color: white;
                border-color: #007bff;
            }

            .pagination li.disabled span {
                color: #6c757d;
                cursor: not-allowed;
                background-color: #e9ecef;
                border-color: #ddd;
            }
</style>

<div class="container">
    <div class="page-inner">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Quản lý đánh giá </h3>
            </div>

            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Người dùng</th>
                            <th>Sản phẩm</th>
                            <th>Xếp hạng</th>
                            <th>Bình luận</th>
                            <th>Ngày đánh giá</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@(item.User != null ? item.User.FullName : "Ẩn danh")</td>
                                    <td>@(item.Product != null ? item.Product.Name : "Sản phẩm không tồn tại")</td>
                                    <td>@(item.Rating.HasValue ? item.Rating.Value + " ⭐" : "Chưa đánh giá")</td>
                                    <td>@item.Comment</td>
                                    <td>@(item.ReviewDate.HasValue ? item.ReviewDate.Value.ToString("dd/MM/yyyy") : "Không có ngày")</td>
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">Không có đánh giá nào</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
                </div>
            </div>
        </div>
    </div>
</div>
